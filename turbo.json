{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build", "^db:generate"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^db:generate"]
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false,
            "interactive": true
        }
    }
}
